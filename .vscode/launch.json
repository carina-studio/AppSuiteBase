        {
            "name": "Packaging Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-packaging-tests",
            "program": "${workspaceFolder}/Packaging.Tests/bin/Debug/net6.0/CarinaStudio.AppSuite.Packaging.Tests.dll",
            "args": [
                "create-package-manifest",
                "linux",
