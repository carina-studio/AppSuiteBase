            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Tests/bin/Debug/net6.0-windows10.0.17763.0/CarinaStudio.AppSuite.Tests.dll",
            "args": [],
