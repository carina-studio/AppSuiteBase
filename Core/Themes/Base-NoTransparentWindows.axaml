<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:sys="using:System">
	
	<!-- Resources -->
	<Styles.Resources>

		<!-- Overlay -->
		<CornerRadius x:Key="OverlayCornerRadius">0</CornerRadius>
		
		<!-- Popup -->
		<sys:Double x:Key="Double/Popup.ShadowLength">0</sys:Double>
		<Thickness x:Key="Thickness/Popup.Shadow.Margin">0</Thickness>

		<!-- ToolTip -->
		<CornerRadius x:Key="CornerRadius/ToolTip">0</CornerRadius>
		<Thickness x:Key="Thickness/ToolTip.Margin">0</Thickness>
	
	</Styles.Resources>
	
	<!-- ContextMenu -->
	<Style Selector="ContextMenu /template/ Border">
		<Setter Property="RenderTransform" Value="{x:Null}"/>
	</Style>
	
	<!-- Popup -->
	<Style Selector="Popup > Border">
		<Setter Property="RenderTransform" Value="{x:Null}"/>
	</Style>
	
	<!-- ToolTip -->
	<Style Selector="ToolTip">
		<Setter Property="Transitions" Value="{x:Null}"/>
	</Style>
	
</Styles>
