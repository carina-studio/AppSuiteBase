<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:sys="clr-namespace:System;assembly=System.Runtime">
	
	<!-- Resources -->
	<Styles.Resources>
		<ResourceDictionary>
			
			<!-- Button -->
			<CornerRadius x:Key="CornerRadius/Button">5</CornerRadius>

			<!-- ComboBoxItem -->
			<CornerRadius x:Key="CornerRadius/ComboBoxItem">5</CornerRadius>

			<!-- Control -->
			<CornerRadius x:Key="ControlCornerRadius">5</CornerRadius>
			<CornerRadius x:Key="ControlCornerRadiusBottom">0,0,5,5</CornerRadius>
			<CornerRadius x:Key="ControlCornerRadiusLeft">5,0,0,5</CornerRadius>
			<CornerRadius x:Key="ControlCornerRadiusRight">0,5,5,0</CornerRadius>
			<CornerRadius x:Key="ControlCornerRadiusTop">5,5,0,0</CornerRadius>

			<!-- Dialog -->
			<CornerRadius x:Key="CornerRadius/Dialog.ItemsGroup">8</CornerRadius>
			<sys:Double x:Key="Double/Dialog.TextBlock.FontSize.ItemsGroupHeader">16</sys:Double>
			<Thickness x:Key="Thickness/Dialog.TextBlock.Margin.ItemsGroupHeader">0,0,0,10</Thickness>

			<!-- ListBoxItem -->
			<CornerRadius x:Key="CornerRadius/ListBoxItem">4</CornerRadius>

			<!-- MenuItem -->
			<CornerRadius x:Key="CornerRadius/MenuItem">5</CornerRadius>

			<!-- Overlay -->
			<CornerRadius x:Key="OverlayCornerRadius">8</CornerRadius>

			<!-- ProcessingDialog -->
			<CornerRadius x:Key="CornerRadius/ProcessingDialog">10</CornerRadius>

			<!-- Slider -->
			<sys:Double x:Key="SliderHorizontalThumbWidth">14</sys:Double>
			<sys:Double x:Key="SliderVerticalThumbHeight">14</sys:Double>

			<!-- TabItem -->
			<CornerRadius x:Key="CornerRadius/TabItem.Header">7,7,0,0</CornerRadius>

			<!-- ToolTip -->
			<CornerRadius x:Key="CornerRadius/ToolTip">4</CornerRadius>

			<!-- TreeViewItem -->
			<CornerRadius x:Key="CornerRadius/TreeViewItem">4</CornerRadius>
			
		</ResourceDictionary>
	</Styles.Resources>
	
</Styles>
