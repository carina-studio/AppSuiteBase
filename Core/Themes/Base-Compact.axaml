<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:sys="using:System"
		xmlns:abControls="using:CarinaStudio.Controls"
		xmlns:abConverters="using:CarinaStudio.Data.Converters"
		xmlns:aConverters="using:Avalonia.Data.Converters"
		xmlns:appSuite="using:CarinaStudio.AppSuite"
		xmlns:controls="using:CarinaStudio.AppSuite.Controls"
		xmlns:converters="using:CarinaStudio.AppSuite.Converters">

	<!-- Resources -->
	<Styles.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Themes/Base-Colors.axaml"/>
				<ResourceInclude Source="/Themes/Base-Dimensions-Compact.axaml"/>
				<ResourceInclude Source="/Themes/Base-Others.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Styles.Resources>

	<!-- Styles -->
	<StyleInclude Source="/Themes/Base-Styles.axaml"/>

	<!-- Button -->
	<Style Selector="Button">
		<Setter Property="CornerRadius" Value="{DynamicResource CornerRadius/Button}"/>
	</Style>

	<!-- RepeatButton -->
	<Style Selector="RepeatButton">
		<Setter Property="CornerRadius" Value="{DynamicResource CornerRadius/Button}"/>
	</Style>

	<!-- ToggleButton -->
	<Style Selector="ToggleButton">
		<Setter Property="CornerRadius" Value="{DynamicResource CornerRadius/Button}"/>
	</Style>
	
</Styles>
