<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Resources -->
	<Styles.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Themes/Base-Colors.axaml"/>
				<ResourceInclude Source="/Themes/Base-Dimensions-Compact.axaml"/>
				<ResourceInclude Source="/Themes/Base-Others.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Styles.Resources>

	<!-- Styles -->
	<StyleInclude Source="avares://CarinaStudio.AppBase.Avalonia/Theme/Default.axaml"/>
	<StyleInclude Source="/Themes/Base-Styles.axaml"/>

	<!-- Button -->
	<Style Selector="Button">
		<Setter Property="CornerRadius" Value="{DynamicResource CornerRadius/Button}"/>
	</Style>

	<!-- RepeatButton -->
	<Style Selector="RepeatButton">
		<Setter Property="CornerRadius" Value="{DynamicResource CornerRadius/Button}"/>
	</Style>

	<!-- ToggleButton -->
	<Style Selector="ToggleButton">
		<Setter Property="CornerRadius" Value="{DynamicResource CornerRadius/Button}"/>
	</Style>
	
</Styles>
