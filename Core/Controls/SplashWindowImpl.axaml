<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="using:System"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.AppSuite.Controls.SplashWindowImpl"
        Background="{x:Null}"
        CanResize="False"
        HasSystemDecorations="False"
        Height="200"
        Title="{Binding $parent[Window].ApplicationName}"
        TransparencyLevelHint="Transparent"
        Width="400"
        WindowStartupLocation="CenterScreen">
	
	<!-- Resources -->
	<Window.Resources>

		<!-- Dark theme -->
		<Styles x:Key="darkTheme">
			<Styles.Resources>
				<SolidColorBrush x:Key="Brush/SplashWindow.Background" Color="#111111"/>
				<LinearGradientBrush x:Key="Brush/SplashWindow.Border" EndPoint="0%,100%" StartPoint="0%,0%">
					<GradientStop Offset="0" Color="#444444"/>
					<GradientStop Offset="1" Color="#070707"/>
				</LinearGradientBrush>
				<SolidColorBrush x:Key="Brush/SplashWindow.Foreground" Color="#ffffff"/>
			</Styles.Resources>
		</Styles>

		<!-- Light theme -->
		<Styles x:Key="lightTheme">
			<Styles.Resources>
				<SolidColorBrush x:Key="Brush/SplashWindow.Background" Color="#eeeeee"/>
				<LinearGradientBrush x:Key="Brush/SplashWindow.Border" EndPoint="0%,100%" StartPoint="0%,0%">
					<GradientStop Offset="0" Color="#f0f0f0"/>
					<GradientStop Offset="1" Color="#e0e0e0"/>
				</LinearGradientBrush>
				<SolidColorBrush x:Key="Brush/SplashWindow.Foreground" Color="#222222"/>
			</Styles.Resources>
		</Styles>

		<!-- Other resources -->
		<CornerRadius x:Key="CornerRadius/SplashWindow">10</CornerRadius>
		<sys:Double x:Key="Double/ApplicationInfoDialog.AppVersion.Opacity">0.6</sys:Double>
		<sys:Double x:Key="Double/SplashWindow.ContentAnimation.Translation">50</sys:Double>
		<sys:Double x:Key="Double/SplashWindow.Icon.Size">80</sys:Double>
		<sys:Double x:Key="Double/SplashWindow.Message.FontSize">12</sys:Double>
		<sys:Double x:Key="Double/SplashWindow.Message.ReservedSpace">50</sys:Double>
		<sys:Double x:Key="Double/SplashWindow.Title.FontSize">24</sys:Double>
		<sys:Double x:Key="Double/SplashWindow.Title.MaxWidth">230</sys:Double>
		<Thickness x:Key="Thickness/SplashWindow.Border">2</Thickness>
		<Thickness x:Key="Thickness/SplashWindow.Icon.Margin">0,0,20,0</Thickness>
		<Thickness x:Key="Thickness/SplashWindow.Message.Margin">0,30,0,0</Thickness>
		<Thickness x:Key="Thickness/SplashWindow.Padding">20</Thickness>
		<Thickness x:Key="Thickness/SplashWindow.Title.Margin">0,0,0,5</Thickness>
		<sys:TimeSpan x:Key="TimeSpan/SplashWindow.ContentAnimation">0:0:1</sys:TimeSpan>

	</Window.Resources>

	<!-- Styles -->
	<Window.Styles>
		<Style Selector="TextBlock">
			<Setter Property="Foreground" Value="{DynamicResource Brush/SplashWindow.Foreground}"/>
		</Style>
	</Window.Styles>

	<!-- Content -->
	<Border Opacity="0">
		
		<Border.Transitions>
			<Transitions>
				<DoubleTransition Property="Opacity" Duration="0:0:1.4" Easing="ExponentialEaseOut"/>
			</Transitions>
		</Border.Transitions>

		<Panel>

			<!-- Background -->
			<Border Background="{DynamicResource Brush/SplashWindow.Background}" BorderBrush="{x:Static Brushes.Transparent}" BorderThickness="{StaticResource Thickness/SplashWindow.Border}" CornerRadius="{StaticResource CornerRadius/SplashWindow}"/>
			<Border Name="backgroundOverlayBorder" BorderBrush="{x:Static Brushes.Transparent}" BorderThickness="{StaticResource Thickness/SplashWindow.Border}" CornerRadius="{StaticResource CornerRadius/SplashWindow}" Opacity="0">
				<Border.Background>
					<LinearGradientBrush EndPoint="0%,50%" StartPoint="0%,0%">
						<GradientStop Color="{DynamicResource AccentColor30}" Offset="0"/>
						<GradientStop Color="{DynamicResource AccentColor00}" Offset="1"/>
					</LinearGradientBrush>
				</Border.Background>
				<Border.Transitions>
					<Transitions>
						<DoubleTransition Property="Opacity" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
					</Transitions>
				</Border.Transitions>
			</Border>
			
			<!-- Content -->
			<Grid ColumnDefinitions="*,Auto,Auto,*" HorizontalAlignment="Stretch" Margin="{StaticResource Thickness/SplashWindow.Padding}" RowDefinitions="Auto,Auto" VerticalAlignment="Center">

				<!-- Icon -->
				<Image Name="iconImage" Grid.Column="1" Height="{StaticResource Double/SplashWindow.Icon.Size}" HorizontalAlignment="Right" Margin="{StaticResource Thickness/SplashWindow.Icon.Margin}" Opacity="0" Source="{Binding $parent[Window].IconBitmap}" Width="{DynamicResource Double/SplashWindow.Icon.Size}" VerticalAlignment="Center">
					<Image.RenderTransform>
						<TranslateTransform X="{StaticResource Double/SplashWindow.ContentAnimation.Translation}">
							<TranslateTransform.Transitions>
								<Transitions>
									<DoubleTransition Property="X" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
								</Transitions>
							</TranslateTransform.Transitions>
						</TranslateTransform>
					</Image.RenderTransform>
					<Image.Transitions>
						<Transitions>
							<DoubleTransition Property="Opacity" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
						</Transitions>
					</Image.Transitions>
				</Image>

				<!-- Title and version -->
				<Grid Grid.Column="2" HorizontalAlignment="Left" RowDefinitions="Auto,Auto,*" VerticalAlignment="Center">
					<TextBlock Name="titleTextBlock" FontSize="{DynamicResource Double/SplashWindow.Title.FontSize}}" FontWeight="Bold" Margin="{StaticResource Thickness/SplashWindow.Title.Margin}" MaxWidth="{StaticResource Double/SplashWindow.Title.MaxWidth}" Opacity="0" Text="{Binding $parent[Window].ApplicationName}" TextTrimming="CharacterEllipsis">
						<TextBlock.RenderTransform>
							<TranslateTransform X="{StaticResource Double/SplashWindow.ContentAnimation.Translation}">
								<TranslateTransform.Transitions>
									<Transitions>
										<DoubleTransition Property="X" Delay="0:0:0.1" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
									</Transitions>
								</TranslateTransform.Transitions>
							</TranslateTransform>
						</TextBlock.RenderTransform>
						<TextBlock.Transitions>
							<Transitions>
								<DoubleTransition Property="Opacity" Delay="0:0:0.1" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
							</Transitions>
						</TextBlock.Transitions>
					</TextBlock>
					<TextBlock Name="versionTextBlock" Grid.Row="1" Opacity="0" Text="{Binding $parent[Window].Version}" TextTrimming="CharacterEllipsis">
						<TextBlock.RenderTransform>
							<TranslateTransform X="{StaticResource Double/SplashWindow.ContentAnimation.Translation}">
								<TranslateTransform.Transitions>
									<Transitions>
										<DoubleTransition Property="X" Delay="0:0:0.2" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
									</Transitions>
								</TranslateTransform.Transitions>
							</TranslateTransform>
						</TextBlock.RenderTransform>
						<TextBlock.Transitions>
							<Transitions>
								<DoubleTransition Property="Opacity" Delay="0:0:0.2" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
							</Transitions>
						</TextBlock.Transitions>
					</TextBlock>
					<TextBlock Name="copyrightTextBlock" Grid.Row="2" Opacity="0" Text="Â©2021 Carina Studio" TextTrimming="CharacterEllipsis">
						<TextBlock.RenderTransform>
							<TranslateTransform X="{StaticResource Double/SplashWindow.ContentAnimation.Translation}">
								<TranslateTransform.Transitions>
									<Transitions>
										<DoubleTransition Property="X" Delay="0:0:0.3" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
									</Transitions>
								</TranslateTransform.Transitions>
							</TranslateTransform>
						</TextBlock.RenderTransform>
						<TextBlock.Transitions>
							<Transitions>
								<DoubleTransition Property="Opacity" Delay="0:0:0.3" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
							</Transitions>
						</TextBlock.Transitions>
					</TextBlock>
				</Grid>

				<!-- Message -->
				<Border Grid.ColumnSpan="4" Grid.Row="1" Height="{StaticResource Double/SplashWindow.Message.ReservedSpace}" HorizontalAlignment="Center"/>
				<TextBlock Name="messageTextBlock" FontSize="{StaticResource Double/SplashWindow.Message.FontSize}" Grid.ColumnSpan="4" Grid.Row="1" HorizontalAlignment="Center" Margin="{StaticResource Thickness/SplashWindow.Message.Margin}" Opacity="0" Text="{Binding $parent[Window].Message}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center">
					<TextBlock.RenderTransform>
						<TranslateTransform X="{StaticResource Double/SplashWindow.ContentAnimation.Translation}">
							<TranslateTransform.Transitions>
								<Transitions>
									<DoubleTransition Property="X" Delay="0:0:0.4" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
								</Transitions>
							</TranslateTransform.Transitions>
						</TranslateTransform>
					</TextBlock.RenderTransform>
					<TextBlock.Transitions>
						<Transitions>
							<DoubleTransition Property="Opacity" Delay="0:0:0.4" Duration="{StaticResource TimeSpan/SplashWindow.ContentAnimation}" Easing="ExponentialEaseOut"/>
						</Transitions>
					</TextBlock.Transitions>
				</TextBlock>

			</Grid>

			<!-- Border -->
			<Border BorderBrush="{DynamicResource Brush/SplashWindow.Border}" BorderThickness="{StaticResource Thickness/SplashWindow.Border}" CornerRadius="{StaticResource CornerRadius/SplashWindow}"/>

		</Panel>
	</Border>

</Window>
